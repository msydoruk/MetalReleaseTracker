{
  // ACTION REQUIRED: This file was automatically added to your project, but it
  // will not take effect until additional steps are taken to enable it. See the
  // following page for additional information:
  //
  // https://github.com/DotNetAnalyzers/StyleCopAnalyzers/blob/master/documentation/EnableConfiguration.md

  "$schema": "https://raw.githubusercontent.com/DotNetAnalyzers/StyleCopAnalyzers/master/StyleCop.Analyzers/StyleCop.Analyzers/Settings/stylecop.schema.json",
  "settings": {
    "documentationRules": {
      "companyName": "Metal release tracker",
      "copyrightText": "Copyright © 2024 Metal release tracker",
      "documentExposedElements": true,
      "documentInternalElements": true,
      "documentPrivateElements": false,
      "documentInterfaces": true,
      "documentEnums": true,
      "documentEnumMembers": true,
      "documentFields": false,
      "documentProperties": true,
      "documentEvents": true,
      "documentMethods": true,
      "documentConstructors": true,
      "documentDestructors": true,
      "fileNamingConvention": "stylecop"
    },
    "layoutRules": {
      "newlineAtEndOfFile": "require",
      "newlineBetweenMethods": "require",
      "newlineBetweenTypeMembers": "require",
      "newlineBetweenClassMembers": "require"
    },
    "maintainabilityRules": {
      "topLevelTypes": [
        "class",
        "interface",
        "enum",
        "struct",
        "delegate"
      ],
      "maxLineLength": 120,
      "includeXmlDocumentation": true
    },
    "indentationRules": {
      "indentationSize": 4,
      "tabSize": 4,
      "useTabs": false,
      "useSpaces": true
    },
    "orderingRules": {
      "usingDirectivesPlacement": "outsideNamespace",
      "elementOrder": [
        "constant",
        "field",
        "constructor",
        "destructor",
        "property",
        "method",
        "event"
      ],
      "systemUsingDirectivesFirst": true,
      "usingDirectivesOrder": "fullyQualified"
    },
    "readabilityRules": {
      "allowShortBlocksOnASingleLine": false,
      "allowShortIfStatementsOnASingleLine": false,
      "allowShortLoopsOnASingleLine": false,
      "allowShortCatchClausesOnASingleLine": false
    },
    "namingRules": {
      "allowCommonHungarianPrefixes": false,
      "allowedHungarianPrefixes": [ "ex", "ez" ],
      "variableNamingStyle": "camelCase",
      "fieldNamingStyle": "camelCase",
      "constantNamingStyle": "PascalCase",
      "propertyNamingStyle": "PascalCase",
      "methodNamingStyle": "PascalCase",
      "typeNamingStyle": "PascalCase",
      "interfaceNamingStyle": "IPascalCase",
      "enumNamingStyle": "PascalCase",
      "parameterNamingStyle": "camelCase",
      "genericTypeParameterNamingStyle": "T_PascalCase"
    },
    "spacingRules": {
      "requireSpacesAfterKeywords": true,
      "requireSpacesAfterOperators": true,
      "requireSpacesAroundBinaryOperators": true,
      "requireSpacesWithinParentheses": false,
      "requireSpacesWithinBraces": false,
      "requireSpacesWithinBrackets": false
    }
  }
}
